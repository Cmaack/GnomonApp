      <div ng-controller="AccordionDemoCtrl" class="container">
      <uib-accordion close-others="oneAtATime">
          <uib-accordion-group is-open="status.open">
            <uib-accordion-heading>
              <i class="fa fa-plus"></i> New Task <i class="pull-right glyphicon" ng-class="{'glyphicon-chevron-down': status.open, 'glyphicon-chevron-right': !status.open}"></i>
            </uib-accordion-heading>
          <form ng-submit="createTask()" class="form-horizontal">
            <!-- task title  -->
            <div class="form-group">
              <div class="row">
                <label for="task-title" class="col-sm-1 control-label">Title</label>
                <div class="col-sm-10">
                  <input ng-model="newTask.title" type="text" class="form-control" id="task-title" placeholder="Organize stuff">
                </div>
              </div>
            </div>
            <!-- task notes  -->
            <div class="form-group">
              <div class="row">
                <label for="task-notes" class="col-sm-1 control-label">Notes</label>
                <div class="col-sm-10">
                  <input ng-model="newTask.notes" type="text" class="form-control" id="task-notes" placeholder="...don't procrastinate!">
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-sm-3 col-sm-offset-5">
                <button type="submit" class="btn btn-lg btn-success" id="submit-btn">Submit</button>
              </div>
            </div>
        </form>
        </uib-accordion-group>
        </uib-accordion>
        </div>
        <br>
      <!--
       =====================================================================================
       ********************************** END FORM   ***************************************
       =====================================================================================
       -->

        <div class="container">

          <div class="row">
            <div class="col-md-12">
              <h2>My Tasks</h2>
              <table class="table table-hover">
                <thead>
                  <tr>
                    <th><span class="badge">{{tasks.length}}</span> Task</th>
                    <th>Notes</th>
                    <th class="pull-right">Click to Delte</th>
                  </tr>
                </thead>
                <tbody>
                  <tr ng-repeat="task in tasks | filter: searchBox">
                    <td>{{task.title}}</td>
                    <td>{{task.notes}}</td>
                    <td><button ng-click="deleteTask($index)" class="btn btn-danger btn-sm pull-right" class="btn-delete"><i class="fa fa-trash-o"></i></button></td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
